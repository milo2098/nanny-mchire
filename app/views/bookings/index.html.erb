<h1>Bookings</h1>

<% @grandparents_bookings.each do |booking| %>
  <div class="time">
    <% if booking %>
      <p>Booking ID: <%= booking.id %></p>
      <p>Grandparent: <%= booking.grandparent.user.first_name %></p>
      <p>Student: <%= booking.user.first_name %></p>
      <p>Booking date:<%= booking.date_time.to_date.to_formatted_s(:rfc822)%></p>
      <p>Booking time:<%= booking.date_time.strftime("%I:%M%p")%></p>
    <% else %>
      <p>No bookings</p>
    <% end %>
  </div>
<% end %>
