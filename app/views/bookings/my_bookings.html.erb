<h1>My bookings</h1>

<div class="bookings-container">
  <% @bookings.each do |booking| %>
    <div class="time">
      <% if booking %>
        <p>Booking: <%= booking.id %></p>
        <p>Grandparent: <%= booking.grandparent.user.first_name %> <%= booking.grandparent.user.last_name %></p>
        <p>Student: <%= booking.user.first_name %> <%= booking.user.last_name %></p>
        <p>Booking date: <%= booking.date_time.to_date.to_formatted_s(:rfc822)%></p>
        <p>Booking time: <%= booking.date_time.strftime("%I:%M%p")%></p>
      <% else %>
        <p>No bookings</p>
      <% end %>
    </div>
  <% end %>
</div>

<div class="back">
  <%= link_to "Back to home", root_path, class: "button" %>
</div>
