<div class="container justify-content-center">
  <div class="input-group my-3">
    <div class="input-group-prepend">
      <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Skill</button>
    </div>
    <input type="text" class="form-control" aria-label="Text input with dropdown button">
  </div>

  <div class="grandparents-cards-container  d-flex flex-wrap justify-content-center">
      <% @grandparents.each do |grandparent| %>
        <%= link_to grandparent_path(grandparent), class: "text-decoration-none" do %>
        <div class="card m-2">
          <img src="<%= asset_path('granny.jpg') %>" class="card-img-top" alt="granny image">
          <div class="card-body justify-content-between  align-items-end d-flex pb-1">
            <div>
              <h5 class="card-title"><%= grandparent.user.first_name %> <%= grandparent.user.last_name %></h5>
              <p>Skill: <%= grandparent.skill %></p>
            </div>
            <p>Price: Â£<%= grandparent.price %></p>
          </div>
        </div>
        <% end %>
      <% end %>
    </ul>
  </div>
</div>
