<div class="container justify-content-center">
  <div class="input-group my-3">
    <input type="text" class="form-control" placeholder="Skill" aria-label="Recipient's username" aria-describedby="basic-addon2">
    <div class="input-group-append">
      <span class="input-group-text" id="basic-addon2">Search</span>
    </div>
  </div>

  <div class="grandparents-cards-container  d-flex flex-wrap justify-content-center">
      <% @grandparents.each do |grandparent| %>
        <div class="card w-25 m-2">
          <img src="<%= asset_path('granny.jpg') %>" class="card-img-top" alt="granny image">
          <div class="card-body">
            <h5 class="card-title"><%= grandparent.user.first_name %> <%= grandparent.user.last_name %></h5>
          </div>
        </div>
      <% end %>
    </ul>
  </div>
</div>
