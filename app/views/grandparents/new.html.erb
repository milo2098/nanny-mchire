<div class="new-grandparent container mt-3 justify-content-center bg-light px-5 py-4 rounded-3 shadow">
  <h2 class="fw-bolder mt-0 mb-4">Create a profile:</h1>
  <%= simple_form_for(@grandparent) do |f| %>
    <%= f.input :skill, label: "What skill would you like to teach?" %>
    <%= f.input :description, label: "Tell us some background information about yourself and your skill:", as: :text, input_html: { rows: 5, cols: 50 }  %>
    <div class="d-flex align-items-center">
      <div data-controller="range" class="mb-3 container d-flex flex-column align-items-center">
        <%= f.input :experience, as: :integer, label: "How much would you like to charge per hour?",
            input_html: {
              type: "range",
              min: 0,
              max: 50,
              step: 1,
              value: 0,
              data: { range_target: "slider", action: "input->range#update" }
            } %>
        <div class="d-flex align-items-center">
          <span>Price:</span>
          <span class="ms-2 fw-bolder">Â£</span>
          <span class="fw-bolder" data-range-target="output"><%= @grandparent.price || 0 %></span>
        </div>
      </div>
      <div data-controller="range" class="mb-3 container d-flex flex-column align-items-center">
        <%= f.input :experience, as: :integer, label: "How many years of experience do you have in your skill?",
            input_html: {
              type: "range",
              min: 0,
              max: 50,
              step: 5,
              value: 0,
              data: { range_target: "slider", action: "input->range#update" }
            } %>
        <div class="d-flex align-items-center">
          <span>Years:</span>
          <span class="ms-2 fw-bolder" data-range-target="output"><%= @grandparent.experience || 0 %></span>
        </div>
      </div>
    </div>
    <%= f.submit "Create Grandparent Page", class: "button" %>
  <% end %>
  <%= link_to "Back to Home", root_path, class: "button" %>
</div>
