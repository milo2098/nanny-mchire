<div class="new-grandparent container mt-3 justify-content-center">
  <h1 class="text-center">Enter Your details to Create a Grandparent Page</h1>
  <%= simple_form_for(@grandparent) do |f| %>
    <%= f.input :skill, label: "What skill would you like to teach?" %>
    <%= f.input :description, label: "Tell us some background information about yourself and your skill:", as: :text, input_html: { rows: 5, cols: 50 }  %>
    <%= f.input :price, label: "How much would you like to charge per hour?", collection: (5..40).step(5).to_a, as: :select %>
    <%= f.input :experience, label: "How many years of experience do you have in your skill?", collection: (5..80).step(5).to_a, as: :select %>
    <%= f.submit "Create Grandparent Page", class: "button" %>
  <% end %>
  <%= link_to "Back to Home", root_path, class: "button" %>
</div>
